<UserControl x:Class="PixelArt.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="1600">
    <Grid>
        <Menu VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#21252b">
            <MenuItem Header="File" FontSize="16" Height="40">
                <MenuItem Header="Open" />
                <MenuItem Header="Save" />
                <MenuItem Header="Export" />
            </MenuItem>
            <MenuItem Header="Edit" FontSize="16" Height="40">
                <MenuItem Header="Undo" />
                <MenuItem Header="Redo" />
            </MenuItem>
            <MenuItem Header="Tools" FontSize="16" Height="40">
                <MenuItem Header="1" />
                <MenuItem Header="2" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
