<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:PixelArt.View.UserControls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        x:Class="PixelArt.MainWindow"
        mc:Ignorable="d"
        Title="Art in Pixels" Height="900" Width="1600"
        Background="#21252b">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="MenuBar" Height="40"/>
            <RowDefinition x:Name="WorkSpace"/>
        </Grid.RowDefinitions>

        <!--Menu Bar-->
        <userControls:MenuBar Grid.Row="0" />

        <!--WorkSpace-->
        <userControls:WorkSpace Grid.Row="1" />
    </Grid>
</Window>
